<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="243dp"
    android:layout_gravity="bottom"
    android:background="@color/white">

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:maxEms="5"
        android:maxLines="1"
        android:text="取消"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="142dp"
        android:gravity="center"
        android:maxEms="10"
        android:maxLines="1"
        android:text="title"
        app:layout_constraintBottom_toBottomOf="@+id/cancel"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/cancel"
        app:layout_constraintRight_toLeftOf="@+id/select_number" />

    <TextView
        android:id="@+id/all"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:maxEms="5"
        android:maxLines="1"
        android:text="全选"
        app:layout_constraintRight_toLeftOf="@+id/confirm"
        app:layout_constraintTop_toTopOf="@+id/select_number" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:maxEms="5"
        android:maxLines="1"
        android:text="确定"
        android:textColor="@color/colorAccent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/all" />

    <TextView
        android:id="@+id/select_number"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/number_background"
        android:gravity="center"
        android:text="TextView"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintRight_toLeftOf="@+id/all"
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="364dp"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/multi_select_recyclerView"
        android:layout_width="385dp"
        android:layout_height="208dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="-36dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>